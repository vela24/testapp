<div class="container-fluid">
  <h1>List of users</h1>
  <p>Find me in app/views/home/users.html.erb</p>

  <%= link_to "Dowload Users CSV", home_users_path(format: :csv) %> | 
  <%= link_to "Dowload QR Code", home_users_path(format: :png) %>


  <% @users.each do |user| %>
    <div class="row">
      <div class="col-md-12">
        <%= user.id %> <%= user.email %> <%= user.created_at.try(:strftime,"%m/%d/%Y") %>
      </div>
    </div>
  <% end %>
</div>

<%= image_tag(@qr_png.to_data_url) %>
